def MSACCESS_adapt(s,f):
     for it in f.items():
        if type(it[1])==str:
              f[it[0]]=it[1].decode('utf8').encode(db._db_codec)
        elif type(it[1])==datetime.datetime:
              f[it[0]]=it[1].strftime('%Y-%m-%d %H:%M:%S')

